<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/dialog_title_function_selector"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <LinearLayout
        android:id="@+id/entry_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_a"
            android:text="a="
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/parameter_a"
            app:layout_constraintTop_toBottomOf="@id/spinner"
            app:layout_constraintLeft_toRightOf="@id/tv_a"
            android:background="@drawable/function_input_edit_text_bg"
            android:hint="输入参数a"
            android:maxLines="1"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/entry_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/entry_a"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_b"
            android:text="b="
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/parameter_b"
            app:layout_constraintTop_toBottomOf="@id/spinner"
            app:layout_constraintLeft_toRightOf="@id/tv_a"
            android:background="@drawable/function_input_edit_text_bg"
            android:hint="输入参数b"
            android:maxLines="1"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/entry_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/entry_b"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_c"
            android:text="c="
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/parameter_c"
            app:layout_constraintTop_toBottomOf="@id/spinner"
            app:layout_constraintLeft_toRightOf="@id/tv_a"
            android:background="@drawable/function_input_edit_text_bg"
            android:hint="输入参数c"
            android:maxLines="1"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/entry_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/entry_c"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_d"
            android:text="d="
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/parameter_d"
            app:layout_constraintTop_toBottomOf="@id/spinner"
            app:layout_constraintLeft_toRightOf="@id/tv_a"
            android:background="@drawable/function_input_edit_text_bg"
            android:hint="输入参数d"
            android:maxLines="1"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>